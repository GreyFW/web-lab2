      "name": "GET greeting",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Статус ответа должен быть 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Поле 'text' существует и не является пустым\", function () {",
              "    const data = pm.response.json();",
              "",
              "    // Проверяем, что поле существует (не undefined)",
              "    pm.expect(data).to.have.property(\"text\");",
              "",
              "    // Проверяем, что это строка",
              "    pm.expect(data.text).to.be.a(\"string\");",
              "",
              "    // Проверяем, что длина строки больше 0",
              "    pm.expect(data.text.length).to.be.greaterThan(0);",
              "});"
            ],
